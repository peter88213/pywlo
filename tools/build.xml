<?xml version="1.0" encoding="UTF-8"?>
<project name="pywriter_lo" basedir=".">
	<property name="release" value="0.19.3" />
	<property name="oxt_file" value="pywlo-${release}.oxt" />
	
	<property name="oxt" location="../oxt" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="dist" location="../dist" />
	<property name="reg" location="../reg" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}_v${release}" />

	<target name="build" description="inline all library modules">
		
		<delete dir="${dist}" />
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_saveyw.py"/>
			</exec>
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_openyw.py"/>
			</exec>
	</target>

	<target name="dist" description="generate the distribution">
		
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/pywlo_v${release}" />
		<mkdir dir="${dist}/pywlo_v${release}/setup" />
		<mkdir dir="${dist}/pywlo_v${release}/setup/program" />

		<replace file="${test}/saveyw.py" token="@release" value="${release}" />
		<copy file="${test}/saveyw.py" todir="${dist}/pywlo_v${release}/setup/program" />

		<replace file="${test}/openyw.py" token="@release" value="${release}" />
		<copy file="${test}/openyw.py" todir="${dist}/pywlo_v${release}/setup/program" />

		<copy file="${oxt}/${oxt_file}" todir="${dist}/pywlo_v${release}/setup/program" />
		<copy file="${reg}/add_cm.reg" todir="${dist}/pywlo_v${release}/setup" />
		<copy file="${reg}/del_cm.reg" todir="${dist}/pywlo_v${release}/setup" />

		<copy file="./Install.bat" todir="${dist}/pywlo_v${release}" />
		<replace file="${dist}/pywlo_v${release}/Install.bat" token="@release" value="${release}" />
		<replace file="${dist}/pywlo_v${release}/Install.bat" token="@oxt_file" value="${oxt_file}" />

		<copy file="./Uninstall.bat" todir="${dist}/pywlo_v${release}" />
		<replace file="${dist}/pywlo_v${release}/Uninstall.bat" token="@release" value="${release}" />
		<replace file="${dist}/pywlo_v${release}/Uninstall.bat" token="@oxt_file" value="${oxt_file}" />

		<copy file="../README.md" todir="${dist}/pywlo_v${release}" />
		<copy file="../LICENSE" todir="${dist}/pywlo_v${release}" />

		<zip destfile="${dist}/pywlo-v${release}.oxt" basedir="${dist}/pywlo_v${release}" />
	</target>

	<target name="clean" description="clean up">
		
		<!--delete file="${test}/saveyw.py" /-->
		<!--delete file="${test}/openyw.py" /-->
		
	</target>
	
</project>