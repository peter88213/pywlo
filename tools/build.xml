<?xml version="1.0" encoding="UTF-8"?>
<project name="pywriter_lo" basedir=".">
	<property name="release" value="0.12.1" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="dist" location="../dist" />
	<property name="oxt" location="../oxt" />
	<property name="reg" location="../reg" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}_v${release}" />

	<target name="build" description="inline all library modules">
		
		<delete dir="${dist}" />
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_saveyw.py"/>
			</exec>
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_openyw.py"/>
			</exec>
	</target>

	<target name="dist" description="generate the distribution">
		
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/PyWriter_LO_v${release}" />
		<mkdir dir="${dist}/PyWriter_LO_v${release}/setup" />
		<mkdir dir="${dist}/PyWriter_LO_v${release}/setup/program" />

		<copy file="${test}/saveyw.py" todir="${dist}/PyWriter_LO_v${release}/setup/program" />
		<copy file="${test}/openyw.py" todir="${dist}/PyWriter_LO_v${release}/setup/program" />
		<copy file="${oxt}/SaveYw-L-${release}.oxt" todir="${dist}/PyWriter_LO_v${release}/setup/program" />
		<copy file="${reg}/add_cm.reg" todir="${dist}/PyWriter_LO_v${release}/setup" />
		<copy file="${reg}/del_cm.reg" todir="${dist}/PyWriter_LO_v${release}/setup" />

		<copy file="./Install.bat" todir="${dist}/PyWriter_LO_v${release}" />
		<copy file="./Uninstall.bat" todir="${dist}/PyWriter_LO_v${release}" />

		<copy file="../README.md" todir="${dist}/PyWriter_LO_v${release}" />
		<copy file="../LICENSE" todir="${dist}/PyWriter_LO_v${release}" />

		<zip destfile="${dist}/PyWriter_LO_v${release}.zip" basedir="${dist}/PyWriter_LO_v${release}" />
	</target>

	<target name="clean" description="clean up">
		
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
		
	</target>
	
</project>