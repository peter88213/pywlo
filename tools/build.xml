<?xml version="1.0" encoding="UTF-8"?>
<project name="pywriter_lo" basedir=".">
	<property name="release" value="0.22.1" />
	<property name="oxt_file" value="pywlo-L-${release}.oxt" />
	
	<property name="oxt" location="../oxt" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="dist" location="../dist" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}_v${release}" />

	<target name="build" description="inline all library modules">
		
		<delete dir="${dist}" />
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_saveyw.py"/>
			</exec>
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_openyw.py"/>
			</exec>
	</target>

	<target name="dist" description="generate the distribution">
		
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/pywlo-L-${release}" />
		<mkdir dir="${dist}/pywlo-L-${release}/Descriptions" />
		<mkdir dir="${dist}/pywlo-L-${release}/icons" />
		<mkdir dir="${dist}/pywlo-L-${release}/META-INF" />
		<mkdir dir="${dist}/pywlo-L-${release}/pywlo" />
		<mkdir dir="${dist}/pywlo-L-${release}/Tooltips" />

		<replace file="${test}/saveyw.py" token="0.99.0" value="${release}" />
		<copy file="${test}/saveyw.py" todir="${dist}/pywlo-L-${release}/pywlo" />

		<replace file="${test}/openyw.py" token="0.99.0" value="${release}" />
		<copy file="${test}/openyw.py" todir="${dist}/pywlo-L-${release}/pywlo" />

		<copy file="${oxt}/Descriptions/descr-de.txt" todir="${dist}/pywlo-L-${release}/Descriptions" />
		<copy file="${oxt}/Descriptions/descr-en.txt" todir="${dist}/pywlo-L-${release}/Descriptions" />
		
		<copy file="${oxt}/icons/yWriter_16.png" todir="${dist}/pywlo-L-${release}/icons" />
		<copy file="${oxt}/icons/yWriter_26.png" todir="${dist}/pywlo-L-${release}/icons" />

		<copy file="${oxt}/META-INF/manifest.xml" todir="${dist}/pywlo-L-${release}/META-INF" />
		
		<copy file="${oxt}/Tooltips/tip-en.txt" todir="${dist}/pywlo-L-${release}/Tooltips" />
		<copy file="${oxt}/Tooltips/tip-de.txt" todir="${dist}/pywlo-L-${release}/Tooltips" />

		<copy file="${oxt}/AddonUI.xcu" todir="${dist}/pywlo-L-${release}" />
		<replace file="${dist}/pywlo-L-${release}/AddonUI.xcu" token="0.99.0" value="${release}" />

		<copy file="${oxt}/description.xml" todir="${dist}/pywlo-L-${release}" />
		<replace file="${dist}/pywlo-L-${release}/description.xml" token="0.99.0" value="${release}" />

		<copy file="../README.md" todir="${dist}/pywlo-L-${release}" />
		<copy file="../LICENSE" todir="${dist}/pywlo-L-${release}" />

		<zip destfile="${dist}/pywlo-L-${release}.oxt" basedir="${dist}/pywlo-L-${release}" />

		<copy file="./pywlo-L.update.xml" overwrite="True" todir=".." />
		<replace file="../pywlo-L.update.xml" token="0.99.0" value="${release}" />

	</target>

	<target name="clean" description="clean up">
		
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
		
	</target>
	
</project>