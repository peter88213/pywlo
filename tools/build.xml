<?xml version="1.0" encoding="UTF-8"?>
<project name="yw-cnv" basedir=".">
	<property name="release" value="0.25.0" />
	<property name="project-name" value="${ant.project.name}" />
	<property name="release-name" value="${project-name}-${release}" />
	<property name="release-name-L" value="${project-name}-L-${release}" />
	<property name="release-name-A" value="${project-name}-A-${release}" />
	
	<property name="oxt" location="../oxt" />
	<property name="src" location="../src" />
	<property name="test" location="../test" />
	<property name="dist" location="../dist" />
	<property name="oxt_file" value="${release-name-L}.oxt" />

	<target name="build" description="inline all library modules">
		
		<mkdir dir="${test}" />
		<delete dir="${dist}" />
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_saveyw.py"/>
			</exec>
			<exec executable="python" failonerror="true">
			    <arg value="${src}/build_openyw.py"/>
			</exec>
	</target>

	<target name="dist-L" description="generate the LibreOffice distribution">
		
		<mkdir dir="${dist}" />
		<mkdir dir="${dist}/${release-name-L}" />
		<mkdir dir="${dist}/${release-name-L}/Descriptions" />
		<mkdir dir="${dist}/${release-name-L}/Legal" />
		<mkdir dir="${dist}/${release-name-L}/META-INF" />
		<mkdir dir="${dist}/${release-name-L}/yw-cnv" />
		<mkdir dir="${dist}/${release-name-L}/Tooltips" />

		<copy file="${test}/saveyw.py" todir="${dist}/${release-name-L}/${ant.project.name}" />
		<replace file="${dist}/${release-name-L}/${ant.project.name}/saveyw.py" token="@release" value="${release}" />

		<copy file="${test}/openyw.py" todir="${dist}/${release-name-L}/yw-cnv" />
		<replace file="${dist}/${release-name-L}/${ant.project.name}/openyw.py" token="@release" value="${release}" />

		<copy file="${oxt}/Descriptions/descr-de.txt" todir="${dist}/${release-name-L}/Descriptions" />
		<copy file="${oxt}/Descriptions/descr-en.txt" todir="${dist}/${release-name-L}/Descriptions" />
		<copy file="${oxt}/Legal/license-en.txt" todir="${dist}/${release-name-L}/Legal" />

		<copy file="${oxt}/META-INF/manifest.xml" todir="${dist}/${release-name-L}/META-INF" />
		
		<copy file="${oxt}/Tooltips/tip-en.txt" todir="${dist}/${release-name-L}/Tooltips" />
		<copy file="${oxt}/Tooltips/tip-de.txt" todir="${dist}/${release-name-L}/Tooltips" />

		<copy file="${oxt}/AddonUI.xcu" todir="${dist}/${release-name-L}" />
		<replace file="${dist}/${release-name-L}/AddonUI.xcu" token="0.99.0" value="${release}" />

		<copy file="${oxt}/description.xml" todir="${dist}/${release-name-L}" />
		<replace file="${dist}/${release-name-L}/description.xml" token="0.99.0" value="${release}" />

		<copy file="../README.md" todir="${dist}/${release-name-L}" />

		<zip destfile="${dist}/${release-name-L}.oxt" basedir="${dist}/${release-name-L}" />

		<copy file="./yw-cnv-L.update.xml" overwrite="True" todir=".." />
		<replace file="../yw-cnv-L.update.xml" token="0.99.0" value="${release}" />

	</target>

	<target name="clean" description="clean up">
		
		<delete file="${test}/saveyw.py" />
		<delete file="${test}/openyw.py" />
		
	</target>
	
</project>